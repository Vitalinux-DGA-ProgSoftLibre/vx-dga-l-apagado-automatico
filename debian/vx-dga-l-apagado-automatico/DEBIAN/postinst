#!/bin/sh
# postinst script for vx-dga-l-apagado-automatico
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	if test -f /tmp/apagado_automatico-ant ; then
		cat /tmp/apagado_automatico-ant > /etc/cron.d/apagado_automatico
	else
		if test -f /etc/cron.d/apagado_automatico ; then
			echo "#0 21 * * * root export DISPLAY=:0 && su $(who | grep ' :0 ' | cut -d' ' -f1) -c '/usr/bin/cuentaatras' --login" > /etc/cron.d/apagado_automatico
		fi
	fi
	
	if ! test -f /etc/cron.d/apagado_automatico
	then
		chmod 644 /etc/cron.d/apagado_automatico
	fi

	chmod +x /usr/bin/cuentaatras
	chmod +x /usr/bin/desprogramar_apagado
	chmod +x /usr/bin/programar_apagado_diario
	chmod +x /usr/bin/vx-comprobar-horas-apagado

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
